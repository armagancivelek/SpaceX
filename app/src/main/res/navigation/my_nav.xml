<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/rocketsFragment">

    <fragment
        android:id="@+id/rocketsFragment"
        android:name="com.armagancivelek.spacex.ui.RocketsFragment"
        android:label="fragment_rockets"
        tools:layout="@layout/fragment_rockets">
        <action
            android:id="@+id/action_rocketsFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.armagancivelek.spacex.ui.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detailFragment_to_wikipediaFragment"
            app:destination="@id/wikipediaFragment" />
        <argument
            android:name="rocketId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/wikipediaFragment"
        android:name="com.armagancivelek.spacex.ui.WikipediaFragment"
        android:label="fragment_wikipedia"
        tools:layout="@layout/fragment_wikipedia" />
</navigation>